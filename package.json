{
  "name": "react-dev-test",
  "version": "1.0.0",
  "description": "A react demo sample app with typescript",
  "main": "index.tsx",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "webpack-dev-server --config webpack.config.js --port=9091 --history-api-fallback",
    "start:prod": "npm run build && node dist/server.bundle.js",
    "build:client": "NODE_ENV='production' webpack",
    "build:server": "webpack --config webpack.config.js --progress --profile --colors",
    "build": "concurrently \"npm run build:client\"  \"npm run build:server\" "
  },
  "author": "anuj rana",
  "license": "ISC",
