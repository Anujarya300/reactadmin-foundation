    "reactstrap": "5.0.0-beta",
    "react-router-dom": "^4.2.2",
    "bootstrap": "4.0.0",
    "chart.js": "2.7.1",
    "flag-icon-css": "2.9.0",
    "font-awesome": "4.7.0",
    "react-chartjs-2": "2.7.0",
    "simple-line-icons": "2.4.1",
    "ts-node": "^3.3.0"
  },
